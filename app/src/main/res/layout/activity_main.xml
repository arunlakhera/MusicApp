<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView_Title"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY"
                android:src="@drawable/img1" />

            <LinearLayout
                android:id="@+id/layout_Genre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView_Title"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Genre"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/textView_GenreAll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="See All"
                    android:textColor="#E91E63" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_Genre_Images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_Genre"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:scrollbars="horizontal">

                <ImageView
                    android:id="@+id/imageView_Genre1"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img2" />

                <ImageView
                    android:id="@+id/imageView_Genre2"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img2" />

                <ImageView
                    android:id="@+id/imageView_Genre3"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img2" />

                <ImageView
                    android:id="@+id/imageView_Genre4"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img2" />

                <ImageView
                    android:id="@+id/imageView_Genre5"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_Albums"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_Genre_Images"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Album"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/textView_AlbumsAll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="See All"
                    android:textColor="#E91E63" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_Album_Images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_Albums"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:scrollbars="horizontal">

                <ImageView
                    android:id="@+id/imageView_Album1"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img4" />

                <ImageView
                    android:id="@+id/imageView_Album2"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img4" />

                <ImageView
                    android:id="@+id/imageView_Album3"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img4" />

                <ImageView
                    android:id="@+id/imageView_Album4"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img4" />

                <ImageView
                    android:id="@+id/imageView_Album5"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img4" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_Artists"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_Album_Images"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Artists"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/textView_ArtistsAll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="See All"
                    android:textColor="#E91E63" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_Artists_Images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_Artists"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:scrollbars="horizontal">

                <ImageView
                    android:id="@+id/imageView_Artist1"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img1" />

                <ImageView
                    android:id="@+id/imageView_Artist2"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img2" />

                <ImageView
                    android:id="@+id/imageView_Artist3"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img3" />

                <ImageView
                    android:id="@+id/imageView_Artist4"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img4" />

                <ImageView
                    android:id="@+id/imageView_Artist5"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_Tracks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_Artists_Images"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tracks"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/textView_TracksAll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="See All"
                    android:textColor="#E91E63" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_Tracks_Images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_Tracks"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:scrollbars="horizontal">

                <ImageView
                    android:id="@+id/imageView_Tracks1"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img1" />

                <ImageView
                    android:id="@+id/imageView_Tracks2"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img2" />

                <ImageView
                    android:id="@+id/imageView_Tracks3"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img3" />

                <ImageView
                    android:id="@+id/imageView_Tracks4"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img4" />

                <ImageView
                    android:id="@+id/imageView_Tracks5"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img1" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>